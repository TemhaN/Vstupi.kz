        <div class="flex marquee-wrapper">
            <div class="flex gap-8 text-2xl font-semibold text-cyan-700 whitespace-nowrap marquee-content">
                <span>Назарбаев Университет</span>
                <span>КБТУ</span>
                <span>Евразийский Университет</span>
                <span>КазНУ</span>
                <span>КазНТУ</span>
                <span>АУЭС</span>
                <span>Медицинский Университет Астана</span>
                <span>КазГЮУ</span>
                <span></span>
            </div>
            <div class="flex gap-8 text-2xl font-semibold text-cyan-700 whitespace-nowrap marquee-content">
                <span>Назарбаев Университет</span>
                <span>КБТУ</span>
                <span>Евразийский Университет</span>
                <span>КазНУ</span>
                <span>КазНТУ</span>
                <span>АУЭС</span>
                <span>Медицинский Университет Астана</span>
                <span>КазГЮУ</span>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const wrapper = document.querySelector('.marquee-wrapper');
            const content = wrapper.querySelectorAll('.marquee-content');
            let offset = 0;
            const speed = 0.4;
            const animate = () => {
                offset -= speed;
                if (offset <= -content[0].offsetWidth) {
                    offset += content[0].offsetWidth;
                }
                wrapper.style.transform = `translateX(${offset}px)`;
                requestAnimationFrame(animate);
            };
            animate();
        });
    </script>
</div>


