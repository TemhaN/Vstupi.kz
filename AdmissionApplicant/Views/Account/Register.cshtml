@model AdmissionSystem.Models.User
<div class="flex items-center justify-center sm:px-0 mt-12">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-md p-8 mx-auto">
        <h2 class="text-3xl font-bold text-center text-cyan-700 mb-8">Создать аккаунт</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-4 p-4 bg-red-100 text-red-800 rounded-lg">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p class="text-sm">@error.ErrorMessage</p>
                }
            </div>
        }

        <form asp-action="Register" method="post" class="space-y-6">
            <div class="flex flex-col sm:flex-row gap-4">
                <div class="w-full sm:w-1/2">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Имя</label>
                    <input name="firstName" required maxlength="50" placeholder="Имя" class="w-full px-3 py-2.5 rounded-lg border border-gray-300 bg-white text-gray-900 text-base focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 transition-colors box-border" />
                </div>
                <div class="w-full sm:w-1/2">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Фамилия</label>
                    <input name="lastName" required maxlength="50" placeholder="Фамилия" class="w-full px-3 py-2.5 rounded-lg border border-gray-300 bg-white text-gray-900 text-base focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 transition-colors box-border" />
                </div>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input name="email" type="email" required maxlength="100" placeholder="Email" class="w-full px-3 py-2.5 rounded-lg border border-gray-300 bg-white text-gray-900 text-base focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 transition-colors box-border" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Номер телефона</label>
                <input name="phoneNumber" type="tel" required maxlength="20" pattern="\+?\d{10,15}" title="Введите номер телефона (10-15 цифр, может начинаться с +)" placeholder="+79991234567" class="w-full px-3 py-2.5 rounded-lg border border-gray-300 bg-white text-gray-900 text-base focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 transition-colors box-border" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Имя пользователя</label>
                <input name="username" required maxlength="50" placeholder="Имя пользователя" class="w-full px-3 py-2.5 rounded-lg border border-gray-300 bg-white text-gray-900 text-base focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 transition-colors box-border" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Пароль</label>
                <input name="password" type="password" required placeholder="Пароль" class="w-full px-3 py-2.5 rounded-lg border border-gray-300 bg-white text-gray-900 text-base focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 transition-colors box-border" />
            </div>
            <div>
                <label for="certificateScore" class="block text-sm font-medium text-gray-700">Балл аттестата</label>
                <input type="number" name="certificateScore" id="certificateScore" step="0.01" min="0" max="100" class="w-full px-3 py-2.5 rounded-lg border border-gray-300 bg-white text-gray-900 text-base focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 transition-colors box-border" required />
            </div>
            <button type="submit" class="w-full bg-gradient-to-r from-cyan-600 to-teal-600 hover:from-cyan-700 hover:to-teal-700 text-white font-semibold py-3 rounded-lg shadow-md transition-colors">Зарегистрироваться</button>
        </form>
    </div>
</div>